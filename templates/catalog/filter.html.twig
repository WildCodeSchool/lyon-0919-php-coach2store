{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <hr>
            <p class="text-filters"><i class="fas fa-sort-down fa-2x"></i> Filtres</p>
            {# Brand block #}
            <div class="card">
                <div class="card-header">
                    <p class="text-brands">Marques</p>
                    <hr>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <div class="d-flex flex-column">
                                {% for productByBrand in productsByBrand %}
                                    {% for brand in productByBrand.buckets | slice (1, 2) %}
                                        <input type="checkbox">
                                        {{ brand.value }}
                                    {% endfor %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <small class="text-muted"><a class="text-small" href="#">Voir plus</a></small>
                    <hr>
                </div>
            </div>
            {# Promotion block #}
            <div class="card">
                <hr>
                <a class="mx-auto mt-4 mb-4 text-promo" href="#">PROMOTIONS !</a>
                <hr>
            </div>
            {# Supplier block #}
            <div class="card">
                <div class="card-header">
                    <p class="text-brands">Fournisseurs</p>
                    <hr>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <div class="d-flex flex-column">
                                {% for productBySupplier in productsBySupplier %}
                                    {% for supplier in productBySupplier | slice (6) %}
                                        <input type="checkbox">
                                        {{ supplier.value }}
                                    {% endfor %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <small class="text-muted"><a class="text-small" href="#">Voir plus</a></small>
                    <hr>
                </div>
            </div>
        </div>
    </div>
{% endblock %}