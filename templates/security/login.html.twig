{% extends 'base.html.twig' %}

{% block title %}Connexion !{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-md-5 ">
            <div class="shadow-lg mt-5 col-md-5 mx-auto">
                <div id="first">
                    <div class="myform form ">
                        <div class="logo mb-3">
                            <div class="col-md-12 text-center mt-5 mb-5">
                                <h1>Connexion</h1>
                                <p>Veuillez vous connecter ou vous inscrire pour accéder à votre compte Coach2store et
                                    profiter de vos avantages</p>
                            </div>
                        </div>

                        <form action="" method="post" name="login">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <div class="form-group mb-4 col-9 offset-1">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="email" name="email" value="{{ last_username }}" class="form-control"
                                       id="email" aria-describedby="emailHelp" placeholder="Entrer votre email">
                            </div>
                            <div class="form-group col-9 offset-1">
                                <label for="exampleInputEmail1">Password</label>
                                <input type="password" name="password" id="password" class="form-control"
                                       aria-describedby="emailHelp" placeholder="Entrer votre mot de passe">

                            </div>

                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                            <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                            </div>
                            #}

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            <div class="col-md-9 offset-1 mb-4 mt-5 text-center ">
                                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Se connecter
                                </button>
                            </div>

                            <div class="form-group">
                                <p class="text-center">Vous n'avez pas de compte ? <a
                                            href="{{ path('security_registration') }}" id="signup">Inscrivez-vous
                                        ici</a></p>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
